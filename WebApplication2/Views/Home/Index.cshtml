@model List<models.Produtos>


@{
    ViewData["Title"] = "Home Page";
}


<div align="center">
    <h1 class="titlePromocao">Promoções do mês</h1>
</div>
<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 imgC" src="~/img/basketball-g2d4dda979_1280.jpg" height="550px" alt="Primeiro Slide">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 imgC" src="img/sneakers-g6bdaebbf7_1920.jpg" height="550px" alt="Segundo Slide">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 imgC" src="img/dubai (2).jpg" height="550px" alt="Terceiro Slide">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Próximo</span>
        </a>
    </div>
</div>
<div align="center">
    <h1>Catálogo</h1>
</div>
<div class="container">
    <div class="row" align="center">
        @foreach (var produto in Model)
        {
            <div class="card col-3 cd" style="width: 18rem;" align="center">
                <img src="~/img/air-jordan-1-5-official-images-1.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">

                        @Html.DisplayFor(nome => produto.nomeProduto)



                    </h5>
                    <h4>R$@Html.DisplayFor(nome => produto.valorProduto)</h4>
                    <p>Quantidade disponivel: @Html.DisplayFor(nome => produto.quantidadeProduto)</p>
                    <a href="#" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        }

    

    </div>
</div>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
